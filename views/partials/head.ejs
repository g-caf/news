<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Stay informed with the latest articles from your favorite publications">
    <title><%= title %> | NewsHub</title>
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Atlantic-inspired Editorial Design */
        @import url('https://fonts.googleapis.com/css2?family=Lyon+Display:wght@400;700&family=AGaramondPro:wght@400;600&display=swap');
        
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body { 
            font-family: 'AGaramondPro', Georgia, 'Times New Roman', serif; 
            line-height: 1.7; 
            color: #1a1a1a; 
            background-color: #000000; 
            font-size: 18px;
            margin: 0;
            padding: 0;
        }
        
        /* Article page gets white background for readability */
        body.article-page {
            background-color: #ffffff;
        }
        
        body.article-page .main-content {
            background-color: #ffffff;
            padding: 0;
        }
        
        /* Header - Compact and Efficient */
        .site-header { 
            background: #ffffff; 
            border-bottom: 1px solid #e0e0e0; 
            padding: 16px 24px; 
            position: sticky; 
            top: 0; 
            z-index: 100;
        }
        
        .header-content { 
            display: flex; 
            align-items: center; 
            justify-content: space-between;
            gap: 24px;
            max-width: none;
        }
        
        .site-title a { 
            color: #c5282f; 
            text-decoration: none; 
            font-family: 'Lyon Display', Georgia, serif;
            font-size: 1.8rem; 
            font-weight: 700;
            letter-spacing: -0.02em;
        }
        
        /* Filter Controls */
        .filter-controls {
            display: flex;
            gap: 12px;
            align-items: center;
        }
        
        .filter-select {
            padding: 8px 12px;
            border: 1px solid #d0d0d0;
            background: white;
            font-family: inherit;
            font-size: 14px;
            color: #333;
            border-radius: 4px;
            cursor: pointer;
            min-width: 140px;
        }
        
        .filter-select:focus {
            outline: none;
            border-color: #c5282f;
        }
        
        .search-form { display: flex; align-items: center; }
        .search-form input { 
            padding: 8px 12px; 
            border: 1px solid #d0d0d0; 
            font-family: inherit;
            font-size: 14px;
            width: 200px;
            border-radius: 4px 0 0 4px;
        }
        .search-form button { 
            padding: 8px 16px; 
            background: #c5282f; 
            color: white; 
            border: none; 
            cursor: pointer;
            font-size: 14px;
            border-radius: 0 4px 4px 0;
        }
        
        /* Main Content - Full Screen */
        .main-content { 
            padding: 0; 
            margin: 0;
        }
        
        /* Articles Grid - Edge to Edge, Full Screen */
        .articles-grid { 
            display: grid; 
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 0; 
            min-height: calc(100vh - 70px);
        }
        
        .article-card { 
            aspect-ratio: 1;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease;
            cursor: pointer;
            background: #1a1a1a;
            border: 1px solid #333;
        }
        
        .article-card:hover {
            transform: scale(1.02);
            z-index: 10;
        }
        
        .article-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .article-card:hover .article-image {
            transform: scale(1.05);
        }
        
        .article-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0,0,0,0.8));
            padding: 32px 20px 20px;
            color: white;
        }
        
        .article-meta { 
            display: flex; 
            align-items: center; 
            justify-content: space-between;
            margin-bottom: 12px;
            font-size: 12px;
            opacity: 0.9;
        }
        
        .publication-name { 
            color: #ffffff;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            background: rgba(197, 40, 47, 0.9);
            padding: 4px 8px;
            border-radius: 3px;
        }
        
        .publish-date { 
            color: rgba(255,255,255,0.8); 
            font-size: 11px;
            font-weight: 400;
        }
        
        .article-title { 
            margin: 0;
        }
        
        .article-title a { 
            color: #ffffff; 
            text-decoration: none; 
            font-family: 'Lyon Display', Georgia, serif;
            font-size: 1.1rem; 
            font-weight: 400;
            line-height: 1.3;
            letter-spacing: -0.01em;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            transition: opacity 0.2s;
        }
        .article-title a:hover { opacity: 0.9; }
        
        /* Fallback for articles without images */
        .article-card.no-image {
            background: linear-gradient(135deg, #c5282f 0%, #8b1e24 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 20px;
        }
        
        .article-card.no-image .article-overlay {
            position: static;
            background: none;
            padding: 0;
        }
        
        .article-card.no-image .article-title a {
            font-size: 1.3rem;
            -webkit-line-clamp: 4;
        }
        
        /* Special Tiles */
        .no-articles-tile, .load-more-tile {
            aspect-ratio: 1;
            position: relative;
            background: linear-gradient(135deg, #c5282f 0%, #a02128 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .load-more-tile:hover {
            transform: scale(1.02);
            background: linear-gradient(135deg, #a02128 0%, #8b1e24 100%);
        }
        
        .no-articles-content, .load-more-content {
            text-align: center;
            text-decoration: none;
            color: inherit;
            display: block;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        
        .no-articles-content h3, .load-more-text {
            font-family: 'Lyon Display', Georgia, serif;
            font-size: 1.5rem;
            margin-bottom: 8px;
            font-weight: 400;
        }
        
        .no-articles-content p {
            opacity: 0.8;
            font-size: 1rem;
        }
        
        /* Responsive Grid - Larger Tiles */
        @media (min-width: 1600px) {
            .articles-grid {
                grid-template-columns: repeat(5, 1fr);
            }
        }
        
        @media (min-width: 1200px) and (max-width: 1599px) {
            .articles-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }
        
        @media (min-width: 900px) and (max-width: 1199px) {
            .articles-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }
        
        @media (min-width: 600px) and (max-width: 899px) {
            .articles-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        
        @media (max-width: 599px) {
            .articles-grid {
                grid-template-columns: repeat(1, 1fr);
            }
            
            .article-overlay {
                padding: 20px 16px 16px;
            }
            
            .article-title a {
                font-size: 1.2rem;
                -webkit-line-clamp: 3;
            }
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .container { padding: 0 16px; }
            .header-content { flex-direction: column; gap: 16px; }
            .site-title a { font-size: 1.8rem; }
            .page-header h1 { font-size: 2.5rem; }
            .article-title a { font-size: 1.6rem; }
            .article-card:first-child .article-title a { font-size: 2.2rem; }
            .search-form input { width: 100%; max-width: 280px; }
            .main-nav { gap: 20px; }
            .publication-filters { justify-content: center; }
        }
        
        /* Article Detail Page Styling */
        .article-full {
            max-width: 800px;
            margin: 0 auto;
            padding: 48px 32px;
            background: white;
            color: #1a1a1a;
        }
        
        .article-full .article-meta {
            margin-bottom: 24px;
            padding-bottom: 16px;
            border-bottom: 1px solid #e0e0e0;
        }
        
        .article-full .article-title {
            font-family: 'Lyon Display', Georgia, serif;
            font-size: 2.5rem;
            font-weight: 400;
            line-height: 1.2;
            margin: 32px 0;
            color: #1a1a1a;
        }
        
        .article-full .article-byline {
            color: #666;
            font-size: 1.1rem;
            margin-bottom: 24px;
            font-style: italic;
        }
        
        .article-full .article-summary {
            font-size: 1.2rem;
            color: #444;
            font-style: italic;
            margin: 24px 0;
            padding: 24px;
            background: #f8f9fa;
            border-left: 4px solid #c5282f;
        }
        
        .article-full .article-content {
            font-size: 1.1rem;
            line-height: 1.8;
            margin: 32px 0;
            color: #1a1a1a;
        }
        
        .article-full .article-content p {
            margin-bottom: 1.5rem;
        }
        
        .article-full .article-content h1,
        .article-full .article-content h2,
        .article-full .article-content h3 {
            font-family: 'Lyon Display', Georgia, serif;
            margin: 2rem 0 1rem 0;
            color: #1a1a1a;
        }
        
        .article-full .read-original-btn {
            display: inline-block;
            background: #c5282f;
            color: white;
            padding: 12px 24px;
            text-decoration: none;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin: 24px 0;
            transition: background 0.2s;
        }
        
        .article-full .read-original-btn:hover {
            background: #a02128;
        }
        
        .article-footer {
            border-top: 1px solid #e0e0e0;
            padding-top: 24px;
            margin-top: 32px;
            color: #666;
            font-size: 0.95rem;
        }
        
        .navigation-links {
            margin: 32px 0;
            text-align: center;
        }
        
        .back-link {
            color: #c5282f;
            text-decoration: none;
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-weight: 600;
        }
        
        .back-link:hover {
            text-decoration: underline;
        }
        
        /* Footer */
        .site-footer { 
            background: #1a1a1a; 
            color: #ccc; 
            text-align: center; 
            padding: 48px 0; 
            margin-top: 64px;
            font-size: 14px;
        }
    </style>
    <script>
        // Test if JS is loading
        console.log('HEAD JavaScript loaded');
        
        // Infinite scroll functionality
        let isLoading = false;
        let currentOffset = <%= offset || 0 %>;
        const hasMoreContent = <%= articles.length >= 20 ? 'true' : 'false' %>;
        
        function loadMoreArticles() {
            if (isLoading || !hasMoreContent) return;
            
            isLoading = true;
            console.log('Loading more articles...');
            
            const url = new URL(window.location.href);
            url.searchParams.set('offset', currentOffset + 20);
            
            // Use fetch to load more content
            fetch(url.toString())
                .then(response => response.text())
                .then(html => {
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    const newTiles = doc.querySelectorAll('.article-card');
                    const grid = document.querySelector('.articles-grid');
                    
                    newTiles.forEach(tile => {
                        grid.appendChild(tile.cloneNode(true));
                    });
                    
                    currentOffset += 20;
                    isLoading = false;
                    console.log('Loaded more articles, new offset:', currentOffset);
                })
                .catch(error => {
                    console.error('Error loading more articles:', error);
                    isLoading = false;
                });
        }
        
        // Scroll detection
        window.addEventListener('scroll', () => {
            if (window.innerHeight + window.scrollY >= document.body.offsetHeight - 1000) {
                loadMoreArticles();
            }
        });
    </script>
    <link rel="icon" href="/assets/img/favicon.ico">
</head>
